<?xml version="1.0"?>
<!--
-->
<config>
    <modules>
        <Aligent_Chat>
            <version>1.0.0</version>
        </Aligent_Chat>
    </modules>

    <global>
        <helpers>
            <chat>
                <class>Aligent_Chat_Helper</class>
            </chat>
        </helpers>
    </global>

    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <livechat>
                                            <title>Aligent Chat Application</title>
                                        </livechat>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>